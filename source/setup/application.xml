            file="innowork_taskboards.xml" />
        <domaintable name="innowork_iterations"
            file="innowork_iterations.xml" />
        <domaintable name="innowork_iterations_projects"
            file="innowork_iterations_projects.xml" />

		<innoworkitemtype name="taskboard" file="taskboard"
			catalog="innowork-projects-taskboard::misc"
			classfile="innowork/taskboard/InnoworkTaskBoard.php" classname="InnoworkTaskBoard" icon="kword"
			icontype="apps" domainpanel="innoworktaskboard"
			miniicon="folder_txt" summaryname="taskboard-name" showmode="list" />

